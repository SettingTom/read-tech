<div>
  <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
  <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
</div>

<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは
        <%= link_to "#{current_user.user_name}さん", user_path(current_user.id), class: :greeting__link %>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: "book", collection: @book %>
    </div>
  </div>
</main>